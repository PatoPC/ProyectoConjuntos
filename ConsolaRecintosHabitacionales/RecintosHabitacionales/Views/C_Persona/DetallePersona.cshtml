@model DTOs.Persona.PersonaDTOCompleto

<div class="card mb-10 mb-xl-12">
    <div class="card-header card-header-stretch">
        <div class="card-title d-flex align-items-center">
            <div class="row">
                <div class="col-md-9">
                    <h3 class="fw-bolder m-0 text-gray-800">
                        <i class="fas fa-users text-primary fs-2qx"></i>
                        Detalle Persona
                    </h3>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-success" asp-action="AdministrarPersona"><i class="fas fa-undo-alt"></i><b> Ver lista</b></a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body border-top">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row p-lg-10">       
             @Html.HiddenFor(x => x.IdPersona)

            <div class="row">
                <div class="col-md-6">
                    <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="NombrePersona" class="control-label">
                                        Nombres
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>
                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                <input type="text" asp-for="NombresPersona" class="form-control form-control-solid" placeholder="Nombres" readonly="readonly" maxlength="60" />
                            </div>
                        </div>

                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="IdTipoIdentificacion" class="control-label">
                                        Tipo Identificación
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>

                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                @Html.DropDownList("IdTipoIdentificacion", ViewData["listaTipoIdentificacion"] as SelectList, "Seleccionar", htmlAttributes: new { @aria_label = "Selecionar", @data_control = "select2", @data_placeholder = "Seleccionar", @class = "form-select form-select-solid form-select-lg", @disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row mb-12">
                        <div class="col-xl-4">
                            <div class="fs-6 fw-bold mt-2 mb-3">
                                <label for="ApellidosPersona" class="control-label">
                                    Apellidos
                                    @await Html.PartialAsync("_AsteriscoObligatorio")
                                </label>
                            </div>
                        </div>
                        <div class="col-xl-8 fv-row">
                            <input asp-for="ApellidosPersona" class="form-control form-control-solid" maxlength="60" readonly="readonly" />
                        </div>
                    </div>

                    <div class="row mb-12">
                        <div class="col-xl-4">
                            <div class="fs-6 fw-bold mt-2 mb-3">
                                <label for="IdentificacionPersona" class="control-label">
                                    Número Identificación
                                    @await Html.PartialAsync("_AsteriscoObligatorio")
                                </label>
                            </div>
                        </div>
                        <div class="col-xl-8 fv-row">
                            <input asp-for="IdentificacionPersona" class="form-control form-control-solid" maxlength="80" readonly="readonly" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="TelefonoPersona" class="control-label">
                                        Teléfono
                                    </label>
                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                <input asp-for="TelefonoPersona" class="form-control form-control-solid" maxlength="50" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="CelularPersona" class="control-label">
                                        Celular
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>
                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                <input asp-for="CelularPersona" class="form-control form-control-solid" maxlength="50" readonly="readonly" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row mb-12">
                        <div class="col-xl-4">
                            <div class="fs-6 fw-bold mt-2 mb-3">
                                <label for="EmailPersona" class="control-label">
                                    Email
                                    @await Html.PartialAsync("_AsteriscoObligatorio")
                                </label>
                            </div>
                        </div>
                        <div class="col-xl-8 fv-row">
                            <input asp-for="EmailPersona" class="form-control form-control-solid" type="email" maxlength="50" readonly="readonly" />
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                        <label class="control-label" for="ObservacionPersona">
                            Dirección:
                            @await Html.PartialAsync("_AsteriscoObligatorio")
                        </label>
                    </div>
                    <div class="row mb-12">
                        <div class="col-xl-12 fv-row">
                            <textarea asp-for="ObservacionPersona" class="form-control form-control-solid" readonly="readonly"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                    <div class="row mb-12">
                        <div class="col-xl-4">
                            <div class="fs-6 fw-bold mt-2 mb-3">
                                <label asp-for="UsuarioCreacion" class="control-label">
                                    Usuario Creación
                                </label>
                            </div>
                        </div>
                        <div class="col-xl-8 fv-row">
                            @await Html.PartialAsync("_MostrarUsuarioAuditoria", Model.UsuarioCreacion)
                        </div>
                    </div>

                    <div class="row mb-12">
                        <div class="col-xl-4">
                            <div class="fs-6 fw-bold mt-2 mb-3">
                                <label asp-for="FechaCreacion" class="control-label">
                                    Fecha Creación
                                </label>
                            </div>
                        </div>
                        <div class="col-xl-8 fv-row">
                            <input asp-for="FechaCreacion" class="form-control" readonly="readonly" />
                        </div>
                    </div>

                </div>
            <div class="col-md-6 d-flex flex-column">
                <div class="row mb-12">
                    <div class="col-xl-4">
                        <div class="fs-6 fw-bold mt-2 mb-3">
                            <label asp-for="UsuarioModificacion" class="control-label">
                                Usuario Modificación
                            </label>
                        </div>
                    </div>
                    <div class="col-xl-8 fv-row">
                        @await Html.PartialAsync("_MostrarUsuarioAuditoria", Model.UsuarioModificacion)
                    </div>
                </div>

                <div class="row mb-12">
                    <div class="col-xl-4">
                        <div class="fs-6 fw-bold mt-2 mb-3">
                            <label asp-for="FechaModificacion" class="control-label">
                                Fecha Modificación
                            </label>
                        </div>
                    </div>
                    <div class="col-xl-8 fv-row">
                        <input asp-for="FechaModificacion" class="form-control" readonly="readonly" />
                    </div>
                </div>

            </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {

}