@using Utilitarios;
@{
    int anioActual = Convert.ToInt16(DateTime.Now.ToString("yyyy"));
    short mesActual = Convert.ToInt16(DateTime.Now.ToString("MM"));
    int mes = 0;

    List<int> listaAnios = new List<int>();

    if (ViewData["listaAnios"] != null)
    {
        listaAnios = (List<int>)ViewData["listaAnios"];
    }

    mes = mesActual;
}

<div class="post d-flex flex-column-fluid" id="kt_post">
    <!--begin::Container-->
    <div id="kt_content_container" class="container-xxl">
        <form action="@ConstantesAplicacion.pathConsola/C_Adeudo/RespuestaRolPagosEmpleado">
            <div class="card">
                <div class="card-header card-header-stretch">
                    <div class="card-title d-flex align-items-center">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="fw-bolder m-0 text-gray-800">
                                    <i class="fas fa-file-invoice-dollar text-primary fs-2qx"></i>
                                    Generar Adeudo
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top">
                    <label class="fs-6 form-label fw-bolder text-dark">Busqueda Información</label>
                    <div class="row">
                        <label class="fs-6 form-label fw-bolder text-dark">Datos</label>
                        <div class="col-md-3">
                            @Html.DropDownList("IdConjunto", ViewData["listaConjuntos"] as SelectList, htmlAttributes: new { @aria_label = "Selecionar", @data_control = "select2", @data_placeholder = "Seleccionar", @class = "form-select form-select-solid form-select-lg" })
                        </div>

                        <div class="col-md-3">
                            <select name="anio" id="anio" aria-label="Selecionar" data-control="select2" , data-placeholder="Seleccionar" class="form-select form-select-solid form-select-lg">
                                @foreach (var anio in listaAnios)
                                {
                                    if (anio == anioActual)
                                    {
                                        <option value="@anio" selected="selected">@anio</option>
                                    }
                                    else
                                    {
                                        <option value="@anio">@anio</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select for="mes" aria-label="Selecionar" data-control="select2" , data-placeholder="Seleccionar" class="form-select form-select-solid form-select-lg">
                                <option value="1">Enero</option>
                                <option value="2">Febrero</option>
                                <option value="3">Marzo</option>
                                <option value="4">Abril</option>
                                <option value="5">Mayo</option>
                                <option value="6">Junio</option>
                                <option value="7">Julio</option>
                                <option value="8">Agosto</option>
                                <option value="9">Septiembre</option>
                                <option value="10">Octubre</option>
                                <option value="11">Noviembre</option>
                                <option value="12">Diciembre</option>
                            </select>
                        </div>


                        @*<input type="text" name="CodigoConjunto" readonly="readonly" />*@


                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary me-3">Buscar</button>
                        </div>
                    </div>

                </div>
            </div>
            <center><img src="~/assets/media/loading.gif" id="imagenCargando" name="imagenCargando" style="display:none" /></center>
        </form>

        <div id="resultSearch">
        </div>

    </div>
</div>
