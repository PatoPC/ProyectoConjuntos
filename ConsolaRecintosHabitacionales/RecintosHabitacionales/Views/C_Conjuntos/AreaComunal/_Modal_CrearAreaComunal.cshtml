@model DTOs.AreaComunal.AreaComunalDTOCrear

@{
    Layout = "";
}

<div class="modal fade" id="modal_Gestionar_AreaComunal" tabindex="-1" aria-labelledby="modalHorarios" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="fw-bolder m-0 text-gray-800">
                    <i class="fas fa-archway text-primary fs-2qx"></i>
                    Editar Torre
                </h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="cerrarModal('modal_Gestionar_AreaComunal')"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form asp-action="CrearAreaComunal" asp-controller="C_AreaComunal" method="post" id="formularioGestionarAreaComunal">
                   
                        <input asp-for="IdConjunto" type="hidden" />
                        <input asp-for="Estado" type="hidden" value="true" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row mb-12">
                                    <div class="col-xl-4">
                                        <div class="fs-6 fw-bold">
                                            <label asp-for="NombreArea" class="control-label">
                                                Nombre
                                                @await Html.PartialAsync("_AsteriscoObligatorio")
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xl-8 fv-row">
                                        <input type="text" asp-for="NombreArea" class="form-control form-control-solid" placeholder="Nombre" required="required" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="row mb-12">
                                    <div class="col-xl-4">
                                        <div class="fs-6 fw-bold">
                                            <label asp-for="HoraInicio" class="control-label">
                                                Hora Inicio:
                                                @await Html.PartialAsync("_AsteriscoObligatorio")
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xl-8 fv-row">
                                        <input type="text" asp-for="HoraInicio" class="form-control form-control-solid" placeholder="Hora Inicio" required="required" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="row mb-12">
                                    <div class="col-xl-4">
                                        <div class="fs-6 fw-bold">
                                            <label for="HoraFin" class="control-label">
                                                Hora Fin
                                                @await Html.PartialAsync("_AsteriscoObligatorio")
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xl-8 fv-row">
                                        <input type="text" asp-for="HoraFin" class="form-control form-control-solid" placeholder="Hora Fin" required="required" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="row mb-12">
                                    <div class="col-xl-2">
                                        <div class="fs-6 fw-bold">
                                            <label asp-for="Observacion" class="control-label">
                                                Observación
                                               
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-xl-10 fv-row">
                                        <textarea asp-for="Observacion" class="form-control form-control-solid"> </textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                <center> 
                                    <button type="button" class="btn btn-primary me-12" id="btnGestionarAreaComunal" onclick="sendFormAjax(this, 'formularioGestionarAreaComunal','resultadoListaAreaComunal','/C_Conjuntos/RecuperarListaAreaComunalPorConjuntoID?idConjunto=@Model.IdConjunto','btnGestionarAreaComunal','idTablaAreaComunal','modal_Gestionar_AreaComunal')">
                                        
                                        <span class="indicator-label" id="btnGestionarAreaComunalSpan">
                                            Agregar Area
                                        </span>
                                        <span class="indicator-progress">
                                            Por favor espere... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                        </span>
                                    </button>
                                </center>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="cerrarModal('modal_Gestionar_AreaComunal')"><i class="fas fa-times fs-md-2qx"></i> Cerrar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



