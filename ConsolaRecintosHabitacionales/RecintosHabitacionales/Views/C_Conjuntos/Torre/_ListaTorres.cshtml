@model IEnumerable<DTOs.Torre.TorreDTOCompleto>
@using Utilitarios;
@{
    Layout = "";
}
<div class="card card-flush">
    <div class="card card-body">
        @await Html.PartialAsync("_MensajesBusqueda", Model.Count())

        @if (Model.Count() > 0)
        {
            <table border="1" id="idTablaTorres" class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                    <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                        <th>
                            <span class="badge badge-light text-dark">Torre</span>
                        </th>
                         <th>
                             <span class="badge badge-light text-dark">Departamento</span>
                        </th>
                        
                    </tr>
                </thead>
                <tbody class="fw-bold text-gray-600">
                    @if (Model != null)
                    {
                        foreach (var torre in Model)
                        {
                            <tr>
                                <td data-title="Nombre">
                                <div class="row">
                                    <div class="col-md-3">
                                            <div onclick="mostrarModalEditarTorre('modal_Gestionar_Torre', '@torre.IdTorres', 'Editar', '/C_Conjuntos/RecuperarListaTorresPorConjuntoID?idConjuto=@torre.IdConjunto')" class="badge badge-light-primary hover" style="cursor:pointer">
                                                <span>@torre.NombreTorres</span>
                                            </div>
                                    </div>
                                        <div class="col-md-1">
                                            <div onclick="mostrarCrearDepartamentoTorre('modal_Create_Departamento','@torre.IdTorres')">
                                                <i class="fas fa-plus-circle" style="color:green; cursor:pointer"></i>
                                            </div>
                                        </div>
                                    <div class="col-md-1">
                                            <div onclick="mostrarModalEditarTorre('modal_Gestionar_Torre', '@torre.IdTorres', 'eliminar', '/C_Conjuntos/RecuperarListaTorresPorConjuntoID?idConjuto=@torre.IdConjunto')">
                                                <i class="fas fa-window-close" style="color:red; cursor:pointer"></i>
                                            </div>
                                    </div>
                                </div>    
                                </td>
                                <td data-title="Departamento">
                                    @foreach (var departamento in torre.Departamentos)
                                    {
                                        <div>
                                            <div class="col-md-1">
                                                <div onclick="mostrarModalDepartamentoEditar('modal_Gestionar_Departamento', '@departamento.IdDepartamento', 'Editar', '/C_Conjuntos/RecuperarListaTorresPorConjuntoID?idConjuto=@torre.IdConjunto')" class="badge badge-light-primary hover" style="cursor:pointer">
                                                    <span>@departamento.CodigoDepartamento</span>
                                                </div>
                                            </div>
                                            <div class="col-md-1">
                                                <div onclick="mostrarModalDepartamentoEditar('modal_Gestionar_Departamento', '@departamento.IdDepartamento', 'Eliminar', '/C_Conjuntos/RecuperarListaTorresPorConjuntoID?idConjuto=@torre.IdConjunto')" class="badge badge-light-primary hover" style="cursor:pointer">
                                                    <i class="fas fa-window-close" style="color:red; cursor:pointer"></i>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        }
    </div>
</div>