@model List<DTOs.Adeudo.AdeudoDTOCompleto>

@{
    DTOs.Adeudo.AdeudoDTOCompleto objAdeudo = Model.FirstOrDefault();
    int contadorAdeudo = 0;
}

<div class="card mb-10 mb-xl-12">
    <div class="card-header card-header-stretch">
        <div class="card-title d-flex align-items-center">
            <div class="row">
                <div class="col-md-9">
                    <h3 class="fw-bolder m-0 text-gray-800">
                        <i class="fa-solid fa-building-wheat text-primary fs-2qx"></i>
                        Recibo Ingreso
                    </h3>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-success" asp-action="AdministracionEstadoCuenta"><i class="fas fa-undo-alt"></i><b> Regresar</b></a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body border-top">

        <div class="row p-lg-10">
            <form asp-action="GenerarRecibo" id="FormCrear">
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-2">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="NombreProveedor" class="control-label required">
                                            Fecha
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input type="text" name="FechaCobro" id="FechaCobro" class="form-control form-control-solid" required="required" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-2">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="Titulo" class="control-label">
                                            Departamento
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input type="text" class="form-control form-control-solid" readonly="readonly" value="@objAdeudo.Departamento" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-2">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="Estado" class="control-label required">
                                            Forma pago
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    @Html.DropDownList("IdFormapago", ViewData["listaFormasPago"] as SelectList, htmlAttributes: new { @aria_label = "Selecionar", @data_control = "select2", @data_placeholder = "Seleccionar", @class = "form-select form-select-solid form-select-lg" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-2">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="valorPagar" class="control-label required">
                                            Valor Pagar
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input type="text" name="valorPagar" id="valorPagar" class="form-control form-control-solid" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-2">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="Concepto" class="control-label">
                                            Concepto
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input name="Concepto" id="Concepto" class="form-control" required="required" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-2">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="Observacion" class="control-label">
                                            Observacion
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <textarea name="Observacion" id="Observacion" class="form-control" required="required">

                                   </textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <hr />

                @foreach(var adeudoTemp in Model)
                {
                    contadorAdeudo++;
                    string nombreCampoMonto = "montoAdeudo" + contadorAdeudo;
                    string saldoPendiente = "saldoPendienteAdeudo" + contadorAdeudo;

                    <div class="row">
                        <div class="col-md-12 fs-3 mb-3">
                            <center>@adeudoTemp.FechaAdeudos.ToString("dd MMMM yyyy").ToString().ToUpper()</center>
                        </div>
                    </div>
                    <div class="row mb-7">
                        <div class="col-md-4">
                            <div class="col-md-12">
                                <label class="control-label required">
                                    Nombre
                                </label>
                                <input type="text" class="form-control form-control-solid" value="@adeudoTemp.Nombre @adeudoTemp.Apellido" readonly="readonly" />
                            </div>
                            </div>
                        <div class="col-md-2">
                            <label class="control-label required">
                                Valor
                            </label>
                            <input type="text" class="form-control form-control-solid" id="@nombreCampoMonto" value="@adeudoTemp.MontoAdeudos.ToString("F2")" readonly="readonly" />
                        </div>                       

                        <div class="col-md-2">
                            <label class="control-label required">
                                Saldo Pendiente
                            </label>
                            <input type="text" class="form-control form-control-solid" id="@saldoPendiente" name="@saldoPendiente" value="@adeudoTemp.SaldoPendiente.ToString("F2")" readonly="readonly" />
                        </div>
                    </div>

                    <input type="hidden" name="listaIDAdeudos" value="@adeudoTemp.IdAdeudos" />
                }

                <input id="contadorAdeudos" type="hidden" value="@contadorAdeudo" />
                <hr />

                <div class="row">
                    <div class="col-xl-12 fv-row">
                        <center>
                            <button type="button" onclick="sendFormAjax(this, 'FormCrear', undefined,undefined,'btn_CrearProveedor')" class="btn btn-primary" id="btn_CrearProveedor">
                                <span class="indicator-label">
                                    <i class="fas fa-money-bill-wave"></i>Registrar Pago
                                </span>
                                <span class="indicator-progress">
                                    Por favor espere... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                        </center>
                    </div>
                </div>

            </form>


        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/site.js"></script>
    <script type="text/javascript">


        $(document).ready(function () {

            document.getElementById('valorPagar').addEventListener('input', function () {
                const totalAdeudos = parseInt(document.getElementById('contadorAdeudos').value);
                let valorPagar = parseFloat(this.value.replace(',', '.')) || 0; // Reemplazar coma por punto
                let saldoPendiente = valorPagar;

                for (let i = 1; i <= totalAdeudos; i++) {
                    const adeudoElement = document.getElementById('montoAdeudo' + i);
                    const adeudoValue = parseFloat(adeudoElement.value.replace(',', '.')); // Reemplazar coma por punto

                    if (saldoPendiente >= adeudoValue) {
                        saldoPendiente -= adeudoValue; // Marca como pagado
                        document.getElementById('saldoPendienteAdeudo' + i).value = '0.00';
                    } else {
                        document.getElementById('saldoPendienteAdeudo' + i).value = (adeudoValue - saldoPendiente).toFixed(2);
                        saldoPendiente = 0;
                    }
                }
            });

        })



        $("#FechaCobro").flatpickr({
            defaultDate: "today"
        });
    </script>
}