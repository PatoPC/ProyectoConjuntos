@model DTOs.Proveedor.ProveedorDTOCompleto

<div class="card mb-10 mb-xl-12">
    <div class="card-header card-header-stretch">
        <div class="card-title d-flex align-items-center">
            <div class="row">
                <div class="col-md-9">
                    <h3 class="fw-bolder m-0 text-gray-800">
                        <i class="fa-solid fa-building-wheat text-primary fs-2qx"></i>
                        Eliminar Proveedor
                    </h3>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-success" asp-action="AdministrarProveedor"><i class="fas fa-undo-alt"></i><b> Ver lista</b></a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body border-top">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row p-lg-10">

            <form asp-action="EliminarProveedor" id="FormCrear">
                <input type="hidden" asp-for="IdProveedor" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="NombreProveedor" class="control-label">
                                            Conjunto
                                            @await Html.PartialAsync("_AsteriscoObligatorio")
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    @Html.DropDownList("IdConjunto", ViewData["listaConjuntos"] as SelectList, htmlAttributes: new { @aria_label = "Selecionar", @data_control = "select2", @data_placeholder = "Seleccionar", @class = "form-select form-select-solid form-select-lg", @disabled="disabled" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="NombreProveedor" class="control-label">
                                            Nombre/Razón Social
                                            @await Html.PartialAsync("_AsteriscoObligatorio")
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input type="text" asp-for="NombreProveedor" class="form-control form-control-solid" placeholder="Nombre/Razón Social" readonly="readonly" maxlength="60" />
                                </div>
                            </div>

                            <div class="row mb-12">
                                <div class="col-xl-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="TelefonoConjunto" class="control-label">
                                            RUC
                                            @await Html.PartialAsync("_AsteriscoObligatorio")
                                        </label>

                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input type="text" asp-for="RucProveedor" class="form-control form-control-solid" placeholder="RUC" readonly="readonly" maxlength="60" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="ApellidosPersona" class="control-label">
                                        Contacto
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>
                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                <input asp-for="ContactoProveedor" class="form-control form-control-solid" maxlength="70" readonly="readonly" />
                            </div>
                        </div>

                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="IdentificacionPersona" class="control-label">
                                        Ciudad
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>
                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                @*<input asp-for="CiudadProveedor" class="form-control form-control-solid" maxlength="80" readonly="readonly" />*@
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="TelefonoPersona" class="control-label">
                                            Teléfono
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input asp-for="TelefonosProveedor" class="form-control form-control-solid" maxlength="50" readonly="readonly" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="h-100 d-flex flex-column justify-content-between pe-lg-6 mb-lg-0 mb-10">
                            <div class="row mb-12">
                                <div class="col-xl-4">
                                    <div class="fs-6 fw-bold mt-2 mb-3">
                                        <label for="CelularPersona" class="control-label">
                                            EMail
                                            @await Html.PartialAsync("_AsteriscoObligatorio")
                                        </label>
                                    </div>
                                </div>
                                <div class="col-xl-8 fv-row">
                                    <input asp-for="EMailProveedor" class="form-control form-control-solid" maxlength="50" readonly="readonly" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row mb-12">
                            <div class="col-xl-4">
                                <div class="fs-6 fw-bold mt-2 mb-3">
                                    <label for="SaldoAntProveedor" class="control-label">
                                        Saldo Anterior
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>
                                </div>
                            </div>
                            <div class="col-xl-8 fv-row">
                                <input asp-for="SaldoAntProveedor" class="form-control form-control-solid" maxlength="50" readonly="readonly" />
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row mb-12">
                            <label class="col-lg-4 col-form-label fw-bold fs-6">Habilitado</label>
                            <div class="col-lg-8 d-flex align-items-center">
                                <label>
                                    <input type="radio" class="btn-check" name="StatusProveedor" value="true" @(Model.StatusProveedor ? "checked= \"checked\"" : "" ) />
                                    <span class="btn btn btn-color-muted  btn-active-primary fw-bolder px-md-7">Si</span>
                                </label>
                                <label>
                                    <input type="radio" class="btn-check" name="StatusProveedor" value="false" @(!Model.StatusProveedor ? "checked= \"checked\"" : "" ) />
                                    <span class="btn btn btn-color-muted  btn-active-danger fw-bolder px-md-7">No</span>
                                </label>
                            </div>

                        </div>
                    </div>


                    @*  <div class="col-md-6">
                    <div class="row mb-12">
                    <div class="col-xl-4">
                    <div class="fs-6 fw-bold mt-2 mb-3">
                    <label for="StatusProveedor" class="control-label">
                    Saldo Pendiente Proveedor
                    @await Html.PartialAsync("_AsteriscoObligatorio")
                    </label>
                    </div>
                    </div>
                    <div class="col-xl-8 fv-row">
                    <input asp-for="StatusProveedor" class="form-control form-control-solid" maxlength="50" readonly="readonly" />
                    </div>
                    </div>
                    </div>
                    *@
                    <div class="col-md-12">
                        <div class="row mb-12">
                            <div class="col-xl-12 mt-6">
                                <div class="fs-6 fw-bold mt-8">
                                    <label class="control-label" for="ObservacionPersona">
                                        Dirección:
                                        @await Html.PartialAsync("_AsteriscoObligatorio")
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-12">
                            <div class="col-xl-12 fv-row">
                                <textarea asp-for="DirecProveedor" class="form-control form-control-solid" readonly="readonly"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-12 fv-row">
                        <center>
                            <button type="button" onclick="sendFormAjax(this, 'FormCrear', undefined,undefined,'btn_CrearProveedor')" class="btn btn-danger" id="btn_CrearProveedor">
                                <span class="indicator-label">
                                    <i class="far fa-save  fs-md-2qx"></i>Eliminar
                                </span>
                                <span class="indicator-progress">
                                    Por favor espere... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                        </center>
                    </div>
                </div>

            </form>


        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            const select = document.querySelector('#IdConjunto');
            if (select.options.length === 1) {
                select.selectedIndex = 0;
            }
        })

    </script>
}